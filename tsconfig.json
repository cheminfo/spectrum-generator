{
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "node16",
    "sourceMap": true,
    "strict": true,
    "target": "es2020",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": ["src/types/**/*", "./node_modules/@types"]
  },
  "include": ["./src/**/*", ".src/types/**/*"],
  "exclude": ["node_modules"]
}
